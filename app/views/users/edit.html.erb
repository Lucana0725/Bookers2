<h1>User info</h1>
<%= form_with model: @user do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name, autofocus: false, autocomplete: "name" %><br/>
  
  <%= f.label :image %><br/>
  <%= f.file_field :profile_image, accept: "image/*" %><br/>
  
  <%= f.label :introduction %><br/>
  <%= f.text_area :introduction %><br/>
  <%= f.submit "Update User" %>
<% end %>