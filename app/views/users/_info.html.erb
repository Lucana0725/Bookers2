<h1>User info</h1>
<!--user_controller#showで定義した@userに対してUserモデルのget_profile_imageメソッドを使用-->
<%= image_tag user.get_profile_image(100, 100) %>
<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= link_to edit_user_path(current_user.id) do %>
    <span>Edit</span>
  <% end %>
</div>


<h1>New Book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit "Create Book" %>
<% end %>