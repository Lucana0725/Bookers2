<h1>User info</h1>
<!--user_controller#showで定義した@userに対してUserモデルのget_profile_imageメソッドを使用-->
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @user_books.each do |user_book| %>
    <tr>
      <td>
        <%= link_to user_path(user_book.id) do %>
          <%= image_tag user_book.user.get_profile_image(100, 100) %>
        <% end %>
      </td>
      <td>
        <%= user_book.user.name %>
      </td>
      <td>
        <%= link_to book_path(user_book.id) do %>
          <%= user_book.title %>
        <% end %>
      </td>
      <td>
        <%= user_book.body %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>