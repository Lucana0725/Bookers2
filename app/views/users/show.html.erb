<h1>User info</h1>
<!--user_controller#showで定義した@userに対してUserモデルのget_profile_imageメソッドを使用-->
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= link_to edit_user_path(current_user.id) do %>
    <span>Edit</span>
  <% end %>
</div>


<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit "Create Book" %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image(100, 100) %>
        <% end %>
      </td>
      <td>
        <%= book.user.name %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>