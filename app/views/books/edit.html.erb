<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>
  <%= f.label :body, "Opinion" %><br/>
  <%= f.text_area :body %><br/>
  
  <%= f.submit "Update Book" %>
<% end %>

<div>
  <%= link_to "Show", book_path %>
</div>
<div>
  <%= link_to "Back", books_path %>
</div>